

<h1 class="text-center text-uppercase my-4">Listing Articles</h1>
<div class="container table-container">
  <table class="table table-bordered">
    <thead class="bg-primary text-white">
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td><%= link_to 'Show', article_path(article), class: "btn btn-info btn-sm" %></td>
          <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-warning btn-sm" %></td>
          <td><%= button_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
       
      <% end %>
    </tbody>
  </table>
  <div class="text-center my-4">
    <%= link_to 'New Article', new_article_path, class: "btn btn-success" %>
    <%= link_to 'Back', root_path, class: "btn btn-secondary" %>
  </div>
</div>





